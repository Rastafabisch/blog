{
  "compilerOptions": {
    "outDir": "./dist/",
    "target": "esnext",
    "module": "commonjs",
    "lib": ["dom", "esnext"],
    "allowJs": true,
    "resolveJsonModule": true,
    "jsx": "react",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "noImplicitAny": true,
    "plugins": [{ "name": "typescript-plugin-css-modules" }]
  },
  "exclude": ["node_modules", "public", ".cache", "*.js"],
  "include": ["./src/**/*", "./scripts/*.ts", "./jest/**/*"]
}
